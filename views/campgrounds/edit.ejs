<% include ../partials/header %>


    <div class="row">
         <h1 style="text-align: center">Edit your campground</h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="name" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]"  placeholder="price" value="<%= campground.price %>" min="0.00" step="0.01">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="location" value="<%= campground.location %>">
                </div>
               <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" placeholder="image" value="<%= campground.image %>">
                </div>
                <div>
                    <input class="form-control" type="text" name="campground[description]" placeholder="description" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds"> Go back</a>   
        </div>
   </div>

<% include ../partials/footer %>